<com.termux.app.terminal.TermuxActivityRootView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_termux_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/activity_termux_root_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/terminal_card_bg"
        android:elevation="8dp"
        android:padding="4dp"
        android:orientation="vertical">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/terminal_toolbar_view_pager"
            android:layout_height="match_parent">

            <com.termux.view.TerminalView
                android:id="@+id/terminal_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:defaultFocusHighlightEnabled="false"
                android:focusableInTouchMode="true"
                android:scrollbarThumbVertical="@drawable/terminal_scroll_shape"
                android:scrollbars="vertical"
                tools:ignore="UnusedAttribute" />

            <!-- Left Sidebar -->
            <LinearLayout
                android:id="@+id/left_drawer"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#E6121212"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SESSIONS"
                    android:textColor="#FF00FF00"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <ListView
                    android:id="@+id/terminal_sessions_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="#33FFFFFF"
                    android:dividerHeight="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageButton
                        android:id="@+id/settings_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_settings"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/action_open_settings" />

                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

                    <Button
                        android:id="@+id/new_session_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW" />
                </LinearLayout>
            </LinearLayout>

            <!-- Right Sidebar (GUI/Tools) -->
            <LinearLayout
                android:id="@+id/right_drawer"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="#E6121212"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ULTIMATE TOOLS"
                    android:textColor="#FF00FF00"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/btn_tool_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Scripts"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_tool_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File Explorer"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_tool_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Network Tools"
                    android:layout_marginBottom="12dp" />

                <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="v1.0-Ultimate"
                    android:textColor="#4DFFFFFF"
                    android:textSize="10sp"
                    android:gravity="center" />
            </LinearLayout>

        </androidx.drawerlayout.widget.DrawerLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/terminal_toolbar_view_pager"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <View
        android:id="@+id/activity_termux_bottom_space_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent" />

</com.termux.app.terminal.TermuxActivityRootView>
